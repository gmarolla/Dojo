@page
@model PersonGridViewModel
@{
    ViewData["Title"] = "Person Grid View";


}

<h2>Add Person</h2>
<div class="col-md-4">
    
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Person Identifier</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Date Of Birth</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model.person)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.DateOfBirth</td>
                    <td>
                        <a data-value="@item.Id"
                           href="javascript:void(0)" class="btnEdit">Edit</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
